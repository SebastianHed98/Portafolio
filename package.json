{
  "devDependencies": {
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "lint-staged": {
    "src/**/*": {
      "{js,jsx}": "eslint --fix"
    },
    "**/*": {
      "{js,jsx,css,md,json}": "prettier --write"
    }
  }
}
